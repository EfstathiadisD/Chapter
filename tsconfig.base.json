{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@chapter/Features/Themes": ["Libraries/Features/Themes/src/index.ts"],
      "@chapter/Features/Components": ["Libraries/Features/Components/src/index.ts"],
      "@chapter/Features/Shared": ["Libraries/Features/Shared/src/index.ts"],
      "@chapter/Features/Product1": ["Libraries/Features/Product1/src/index.ts"],
      "@chapter/Features/Product2": ["Libraries/Features/Product2/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
